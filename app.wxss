/**app.wxss**/
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0 0;
  box-sizing: border-box;
  margin: 0rpx;
  background: #efefef;
}

.border-radius {
  border-radius: 15rpx;
  border: 1rpx solid #efefef;
}

.list {
  width: 100%;
  height: 100%;
  padding: 0rpx;
  margin: 0rpx;
  box-sizing: border-box;
  background: #efefef;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.list-item {
  height: 150rpx;
  width: 730rpx;
  margin-top: 15rpx;
  background: white;
  display: flex;
  flex-direction: row;
  border-radius: 15rpx;
  border: 1rpx solid #efefef;
  box-sizing: border-box;
}

.write-order {
  width: 580rpx;
  height: 750rpx;
  position: fixed;
  top: 20%;
  left: 0;
  z-index: 9999;
  margin: 30rpx 85rpx;
  background-color: #fff;
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding: 50rpx;
}

.order-item{
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #efefef;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  padding: 0;
}
.order-item-title{
  height: 100%;
  width: 120rpx;
  line-height: 140rpx;
  font-size: 40rpx;
}

.order-item-item{
  width: 350rpx;
  line-height: 140rpx;
  margin-left: 10rpx;
  overflow: hidden;
}

.order-cancel{
  height: 80rpx;
  width: 120rpx;
  border: 1rpx solid #efefef;
  border-radius: 15rpx;
  line-height: 80rpx;
  text-align: center;
  background: black;
  color: white;
  position: relative;
  left: 50rpx;
  top: 50rpx;
}

.order-confirm{
  height: 80rpx;
  width: 120rpx;
  border: 1rpx solid #efefef;
  border-radius: 15rpx;
  line-height: 80rpx;
  text-align: center;
  background: black;
  color: white;
  position: relative;
  left: 180rpx;
  top: 50rpx;
}

.order-item-input{
  display: flex;
  margin-top: 50rpx;
}
