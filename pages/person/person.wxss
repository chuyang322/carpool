/* pages/person/person.wxss */

.person-info {
  height: 200rpx;
  background: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0;
  box-sizing: border-box;
}

.info-head {
  height: 150rpx;
  width: 150rpx;
  border: 1rpx solid #efefef;
  border-radius: 50%;
  margin-left: 50rpx;
}

.info {
  margin-left: 50rpx;
}

.info-name {
  font-size: 40rpx;
}

.info-vip {
  font-size: 20rpx;
}

.login {
  height: 60rpx;
  width: 80rpx;
  background: black;
  color: white;
  margin-left: 300rpx;
  border: 1rpx solid #efefef;
  border-radius: 15rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.balance {
  height: 200rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  align-items: center;
  background: white;
  border: 1rpx solid #efefef;
  border-radius: 15rpx;
  margin-top: 10rpx;
}

.balance-item {
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.balance-title{
  font-size: 25rpx;
  margin-bottom: 10rpx;
}

.balance-number{
  font-size: 35rpx;
  margin-bottom: 10rpx;
}

.balance-operation{
  font-size: 25rpx;
  background: black;
  color: white;
  border-radius: 15rpx;
  border: 1rpx solid #efefef;
  width: 80rpx;
  text-align: center;
}

.term-list {
  width: 100%;
  height: 800rpx;
  background: white;
  border: 1rpx solid #efefef;
  border-radius: 15rpx;
  margin-top: 10rpx;
}

.term-item {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  padding: 0;
  border-radius: 15rpx;
  border-bottom: 1rpx solid #efefef;
}

.term-item-image {
  width: 48rpx;
  height: 48rpx;
  margin-left: 20rpx;
}

.term-item-text {
  margin-left: 20rpx;
}
