/* pages/index/findDriver/finddriver.wxss */
.container {
  width: 100%;
  background: #efefef;
  padding-top: 0rpx;
}

.car-list {
  width: 100%;
  height: 100%;
  padding-left: 15rpx;
  padding-right: 15rpx;
  box-sizing: border-box;
  position: absolute;
}

.car-list-item {
  height: 150rpx;
  width: 100%;
  margin-top: 15rpx;
  background: white;
  display: flex;
  flex-direction: row;
  border-radius: 15rpx;
  border: 1rpx solid #efefef;
}

.car-info{
  height: 100%;
  width: 620rpx;
}

.car-info-top{
  height: 50%;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #efefef;
}

.car-info-bottom{
  height: 50%;
  display: flex;
  flex-direction: row;
}

.car-info-rute{
  height: 100%;
  width: 50%;
  display: flex;
  align-items: center;
  padding-left: 0rpx;
  text-indent: 50rpx;
}

.car-order {
  height: 100%;
  width: 100rpx;
  background: #00b358;
  border: 1rpx solid #00b358;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.car-info-time {
  height: 100%;
  width: 50%;
  display: flex;
  align-items: center;
  padding-left: 0rpx;
  text-indent: 50rpx;
}

.car-info-price {
  height: 100%;
  width: 50%;
  display: flex;
  align-items: center;
  padding-left: 0rpx;
  text-indent: 200rpx;
}

.car-info-number {
  height: 100%;
  width: 50%;
  display: flex;
  align-items: center;
  padding-left: 0rpx;
  text-indent: 200rpx;
}
