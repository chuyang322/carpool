/* pages/taxi/driver/findPassenger/findpassenger.wxss */
.container {
  width: 100%;
  background: #efefef;
  padding-top: 0rpx;
}

.passenger-info{
  height: 100%;
  width: 620rpx;
}

.passenger-info-top{
  height: 50%;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #efefef;
}

.passenger-info-time{
  height: 100%;
  width: 50%;
  text-indent: 50rpx;
  display: flex;
  align-items: center;
}

.passenger-info-number{
  height: 100%;
  width: 50%;
  text-indent: 220rpx;
  display: flex;
  align-items: center;
}

.passenger-info-bottom{
  height: 50%;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.passenger-info-route{
  height: 100%;
  width: 100%;
  text-indent: 50rpx;
  display: flex;
  align-items: center;
}

.passenger-receipt{
  height: 100%;
  width: 100rpx;
  background: black;
  border: 1rpx solid #efefef;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0 15rpx 15rpx 0;
}